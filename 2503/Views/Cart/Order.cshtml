
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/_LayoutPage.cshtml";
}

@using _2503.Models
@model List<Cart>


@{ 
    CUSTOMER cu = (CUSTOMER)Session["User"];
}





<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Shoping Cart
        </span>
    </div>
</div>


<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-b-50 mt-3">
                <div class="m-l-25 m-r--38 m-lr-0-xl">

                    @using (Html.BeginForm())
                    { 
                        @Html.ValidationSummary(true)
                        <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                            <div class="flex-w flex-m m-r-20 m-tb-5">

                                <p class="w-100 mb-2">
                                    Bạn đã có tài khoản? @Html.ActionLink("Đăng nhập", "User", "Customer")

                                </p>

                                <div class="bor8 bg0 m-b-12 w-50">
                                    @*<input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="state" placeholder="Họ và tên">*@
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="state" placeholder="@cu.NAME">
                                </div>

                                <div class="bor8 bg0 m-b-12 w-25 ml-4">
                                    @*<input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="postcode" placeholder="Số điện thoại">*@
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="postcode" placeholder="@cu.PHONENUMBER">
                                </div>

                                <div class="bor8 bg0 m-b-12 w-100">
                                    @*<input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="postcode" placeholder="Địa chỉ">*@
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="postcode" placeholder="@cu.ADDRESS">
                                </div>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9 w-auto">
                                    <select class="js-select2" name="time">
                                        <option>Chọn tỉnh / thành</option>
                                        <option>USA</option>
                                        <option>UK</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9 ml-3 w-auto">
                                    <select class="js-select2" name="time">
                                        <option>Chọn quận / huyện</option>
                                        <option>USA</option>
                                        <option>UK</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>

                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9 ml-3 w-auto">
                                    <select class="js-select2" name="time">
                                        <option>Chọn phường / xã</option>
                                        <option>USA</option>
                                        <option>UK</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>

                                <p class="w-100 mb-2 mt-3">
                                    Phương thức thanh toán
                                </p>

                                <div class="w-100 bor15">
                                    <span><input type="radio" value="1" /></span> <span>Thanh toán khi nhận hàng</span>
                                </div>
                                <input type="radio" value="1" class="w-25" /> <span class="w-75">Chuyển khoản qua ngân hàng</span>


                            </div>
                            <input type="date" name="Dateship" />
                            <input type="submit" value="Đặt hàng" />

                            @Html.ActionLink("HOÀN TẤT ĐƠN HÀNG", "Order", "Cart", new { @class = "flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer mt-3" })
                        </div>
                    }

                </div>
            </div>



            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        THÔNG TIN ĐƠN HÀNG
                    </h4>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Tạm tính:
                            </span>
                        </div>

                        <div class="size-209">
                            <span class="mtext-110 cl2">
                                @String.Format("{0:0,0}", ViewBag.SUMM) đ
                            </span>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        @foreach (var item in Model)
                        {
                            <div class="size-209">
                                <span class="stext-110 cl2">
                                    @item.iName - @item.iQuantity
                                </span>
                            </div>

                            <div class="size-208">
                                <span class="mtext-110 cl2">
                                    @String.Format("{0:0,0}", item.iIntoMoney) đ
                                </span>
                            </div>
                        }
                    </div>

                    <div class="flex-w flex-t bor12 p-b-13 mt-2">
                        <div class="size-209">
                            <span class="stext-110 cl2">
                                Phí vận chuyển:
                            </span>
                        </div>

                        <div class="size-208">
                            <span class="mtext-110 cl2">
                                30,000đ
                            </span>
                        </div>
                    </div>

                    <div class="flex-w flex-t p-b-13 mt-2">
                        <div class="size-209">
                            <span class="stext-110 cl2">
                                TỔNG CỘNG:
                            </span>
                        </div>

                        <div class="size-208">
                            <span class="mtext-110 cl2">
                                @String.Format("{0:0,0}", ViewBag.SUMM) đ
                            </span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>



