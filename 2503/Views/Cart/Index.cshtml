                                                    <i class="fs-16 zmdi zmdi-minus"></i>
                                                </div>

                                                <input class="mtext-104 cl3 txt-center num-product" type="number" name="txtSL" value="@item.iQuantity">

                                                <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m" style="width: 30px; border: 1px solid black">
